<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/section_card"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/card_divider"
    android:layout_marginBottom="@dimen/card_divider">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutSectionCard">

        <TextView
            android:text="Milling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvZone"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <view
            android:layout_width="0dp"
            class="View"
            android:id="@+id/separator"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/tvZone"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_working"
            android:id="@+id/ivWorking"
            app:layout_constraintTop_toBottomOf="@+id/separator"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWorkingNumber"
            android:gravity="center"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ivWorking"
            app:layout_constraintTop_toBottomOf="@+id/separator"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_half_working"
            android:id="@+id/ivHalfWorking"
            app:layout_constraintBottom_toBottomOf="@+id/ivWorking"
            app:layout_constraintLeft_toRightOf="@+id/tvWorkingNumber"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHalfWorkingNumber"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvWorkingNumber"
            app:layout_constraintLeft_toRightOf="@+id/ivHalfWorking"
            android:textStyle="normal|bold"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_not_working"
            android:id="@+id/ivNotWorking"
            app:layout_constraintBottom_toBottomOf="@+id/ivHalfWorking"
            app:layout_constraintLeft_toRightOf="@+id/tvHalfWorkingNumber"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotWorkingNumber"
            android:gravity="center"
            android:textStyle="normal|bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvHalfWorkingNumber"
            app:layout_constraintLeft_toRightOf="@+id/ivNotWorking"
            android:layout_marginStart="8dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>